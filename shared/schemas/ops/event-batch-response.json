{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Event Batch Response",
    "description": "Per-event results with counters and optional backpressure hints.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "serverTime":     { "$ref": "../defs/common.json#/$defs/timestamp" },
      "nextSeqExpected":{ "type": "integer", "minimum": 0 },
      "retryAfterSec":  { "type": "integer", "minimum": 0, "maximum": 86400, "description": "Client should wait this many seconds before retrying if present (max 24h)." },
      "rejected":       { "type": "integer", "minimum": 0 },
      "duplicate":      { "type": "integer", "minimum": 0 },
      "results": {
        "type": "array",
        "minItems": 1,
        "maxItems": 100,
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "eventId":   { "$ref": "../defs/common.json#/$defs/uuidV7" },
            "eventKey":  { "type": "string", "pattern": "^[A-Z0-9-]{3,40}:[0-9]{13}:[0-9]{1,6}$" },
            "status":    { "type": "string", "enum": ["ACCEPTED", "REJECTED", "DUPLICATE"] },
             "code": { "$ref": "../defs/common.json#/$defs/ErrorCode" },
            "message":   { "type": "string", "minLength": 1, "maxLength": 300 },
            "eventIndex":{ "type": "integer", "minimum": 0 }
          },
          "required": ["eventId", "eventKey", "status", "eventIndex"],
          "allOf": [
            {
              "if":   { "properties": { "status": { "const": "REJECTED" } }, "required": ["status"] },
              "then": {
                "type": "object",
                "properties": { "code": { "type": "string" } },
                "required": ["code"]
              }
            }
          ]
        }
      }
    },
    "required": ["serverTime", "results"],
    "examples": [
      {
        "serverTime": "2025-09-09T16:00:01Z",
        "nextSeqExpected": 43,
        "accepted": 1,
        "rejected": 0,
        "duplicate": 0,
        "results": [
          { "eventId": "018f1b3c-9c8a-7a1b-b2c3-4d5e6f708201", "eventKey": "KIOSK-01:1736200000000:42", "status": "ACCEPTED", "eventIndex": 0 }
        ]
      }
    ]
  }