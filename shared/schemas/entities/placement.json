{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Placement",
    "description": "Current location snapshot for an object (Item or Container). Read-model.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "objectType": { "$ref": "../defs/common.json#/$defs/ObjectType" },
      "objectId": { "$ref": "../defs/common.json#/$defs/uuidV7" },
      "zoneId": { "$ref": "../defs/common.json#/$defs/uuidV7" },
      "ctbPath": {
        "type": "array",
        "items": { "$ref": "../defs/common.json#/$defs/uuidV7" },
        "minItems": 0,
        "maxItems": 5,
        "uniqueItems": true
      },
      "updatedAt": { "$ref": "../defs/common.json#/$defs/timestamp" }
    },
    "required": ["objectType", "objectId", "ctbPath", "updatedAt"],
    "anyOf": [
        {
            "type": "object",
            "properties": {
                "zoneId": { "$ref": "../defs/common.json#/$defs/uuidV7" }
            },
            "required": ["zoneId"]
        },
        {
            "type": "object",
            "properties": {
                "ctbPath": {
                    "type": "array",
                    "minItems": 1
                }
            },
            "required": ["ctbPath"]
        }
    ],
    "examples": [
      {
        "objectType": "ITEM",
        "objectId": "018f1b3c-9c8a-7a1b-b2c3-4d5e6f7080d5",
        "zoneId": "018f1b3c-9c8a-7a1b-b2c3-4d5e6f7080e6",
        "ctbPath": ["018f1b3c-9c8a-7a1b-b2c3-4d5e6f7080a2"],
        "updatedAt": "2025-09-09T16:00:00Z"
      }
    ]
  }