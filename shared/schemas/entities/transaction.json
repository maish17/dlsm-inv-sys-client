{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Transaction",
    "description": "Checkout lifecycle record for an Item or Container.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": { "$ref": "../defs/common.json#/$defs/uuidV7" },
      "objectType": { "$ref": "../defs/common.json#/$defs/ObjectType" },
      "objectId": { "$ref": "../defs/common.json#/$defs/uuidV7" },
      "status": { "$ref": "../defs/common.json#/$defs/TxStatus" },
      "checkoutAt": { "$ref": "../defs/common.json#/$defs/timestamp" },
      "returnedAt": { "$ref": "../defs/common.json#/$defs/timestamp" }
    },
    "required": ["id", "objectType", "objectId", "status", "checkoutAt"],
    "examples": [
      {
        "id": "018f1b3c-9c8a-7a1b-b2c3-4d5e6f7080f7",
        "objectType": "ITEM",
        "objectId": "018f1b3c-9c8a-7a1b-b2c3-4d5e6f708091",
        "status": "OPEN",
        "checkoutAt": "2025-09-09T16:00:00Z"
      }
    ]
  }